#include <iostream>
#include <unistd.h>
#include <errno.h>
#include <stdio.h>
#include <stdlib.h>
#include <signal.h>
#include "GPIOClass.h"
using namespace std;


int main (void)
{
    GPIOClass* gpio4 = new GPIOClass("4");

    gpio4->export_gpio();

    cout << " GPIO pins exported" << endl;
    gpio4->setdir_gpio("out");

    cout << " Set GPIO pin directions" << endl;

    while(1)
    {
        usleep(500000);
        gpio4->setval_gpio("1");
        usleep(500000);
        gpio4->setval_gpio("0");

    }
    return 0;
}

